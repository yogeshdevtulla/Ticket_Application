@model List<ADO_Example.Models.DepartmentModel>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container mt-4">
    <h2 class="text-center mb-4">Department Management</h2>

    <!-- Add Item Button -->
    <div class="d-flex justify-content-end mb-3">
        <button id="add-item" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Item
        </button>
    </div>

    <!-- Table -->
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Department Name</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                        {
            <tr data-id="@item.Id">
                <td>@item.DepartmentName</td>
                <td>@item.Status</td>
                <td class="text-center">
                    <!-- Edit Button -->
                    <a href="@Url.Action("Edit", "Department", new { id = item.Id })" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>

                    <!-- Delete Button -->
                    <button class="btn btn-sm btn-danger delete-btn">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
                        }
        </tbody>
    </table>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Popper.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script src="~/Scripts/CustomJS/department.js"></script>