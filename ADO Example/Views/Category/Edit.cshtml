@model ADOExample.Models.CategoryEditViewModel

<h2>Edit Category</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.CategoryId) <!-- Hidden field for Category ID -->

    <div class="form-group">
        <label>Category Name</label>
        @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Department</label>
        @Html.DropDownListFor(model => model.DepartmentName,
            new SelectList(Model.DepartmentList, "DepartmentName", "DepartmentName"), "Select Department", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Status</label>
        <div class="form-check">
            <label class="form-check-label">
                @Html.RadioButtonFor(model => model.Status, "Active", new { @class = "form-check-input" }) Active
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                @Html.RadioButtonFor(model => model.Status, "Inactive", new { @class = "form-check-input" }) Inactive
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
}
