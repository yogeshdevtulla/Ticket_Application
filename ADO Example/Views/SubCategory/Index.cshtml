@model IEnumerable<ADO_Example.Models.SubCategory>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
@{
    ViewBag.Title = "Index";
}

<h2>Subcategory</h2>
<!-- Add Item Button -->

<div class="d-flex justify-content-end mb-3">
    <button id="add-item" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add Item
    </button>

</div>
@*<div>
        <button id="add-item class="btn btn-primary">Add Item</button>
    </div>*@
<table id="subcategoryTable" class="table table-bordered">
    <thead>
        <tr>
            <th>SubCategory Name</th>
            <th>Category Name</th>
            <th>Department Name</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>@subCategory.SubCategoryName</td>
                    <td>@subCategory.Category.CategoryName</td>
                    <td>@subCategory.Department.DepartmentName</td>
                    <td>@subCategory.Status</td>*@
                <td>@item.SubCategoryName</td>
                <td>@item.CategoryName</td>
                <td>@item.DepartmentName</td>
                <td>@item.Status</td>
                <td>
                    @*<button class="btn btn-warning edit" data-id="@item.SubCategoryID">Edit</button>
        <button class="btn btn-danger delete" data-id="@item.SubCategoryID">Delete</button>*@
                    <a href="@Url.Action("Edit", "SubCategory", new { id = item.SubCategoryID })" class="btn btn-warning">Edit</a>

                    @*<a href="@Url.Action("Edit", "SubCategory", new { id = item.SubCategoryID })" class="btn btn-warning">Edit</a>*@
                    @*@a href="@Url.Action("Delete", "SubCategory", new { id = item.SubCategoryID })" class="btn btn-danger">Delete</a>*@
                    <button class="btn btn-sm btn-danger delete-btn" data-id="@item.SubCategoryID">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
