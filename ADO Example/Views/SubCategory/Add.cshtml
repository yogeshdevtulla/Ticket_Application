@{
    ViewBag.Title = "Add SubCategory";
}
<div class="container mt-4">
    <h2 class="text-center mb-4">Add SubCategory</h2>

    @using (Html.BeginForm("Add", "SubCategory", FormMethod.Post))
    {
        <form id="add-subcategory-form">

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="subcategoryName" class="form-label">SubCategory Name</label>
                    <input type="text" id="SubCategoryName" name="SubCategoryName" class="form-control" placeholder="Enter SubCategory Name" required />
                </div>

                <div class="col-md-6">
                    <label for="CategoryID" class="form-label">Category</label>
                    <select id="CategoryID" class="form-control" name="CategoryID" required>
                        <option value="">-- Select Category --</option>
                        @foreach (var category in ViewBag.Categories as List<ADOExample.Models.Category>)
                        {
                            <option value="@category.CategoryID">@category.CategoryName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">

                    <label for="Id" class="form-label">Department</label>
                    <select id="Id" class="form-control" name="Id" required>
                        <option value="">-- Select Department --</option>
                        @foreach (var department in ViewBag.Depratments as List<ADO_Example.Models.DepartmentModel>)
                        {
                            <option value="@department.Id">@department.DepartmentName</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    @*<label for="status" class="form-label">Status</label><br />*@

                    @*<label><input type="radio" name="Status" value="Active" checked /> Active</label>
                        <label><input type="radio" name="Status" value="Inactive" /> Inactive</label>*@

                    <label for="status" class="form-label">Status</label><br />
                    <div class="form-check form-check-inline">
                        <input type="radio" id="active" name="Status" value="Active" class="form-check-input" checked />
                        <label for="active" class="form-check-label">Active</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" id="inactive" name="Status" value="Inactive" class="form-check-input" />
                        <label for="inactive" class="form-check-label">Inactive</label>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button type="reset" class="btn btn-secondary me-2">Reset</button>
                    <button type="button" id="cancel-btn" class="btn btn-danger">Cancel</button>
                </div>
        </form>

        @*<button type="submit" class="btn btn-primary">Submit</button>*@
    }
</div>

@*!-- jQuery -->*@
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="~/Scripts/CustomJS/subcategory.js"></script>