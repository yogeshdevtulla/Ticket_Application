<!-- Additional Styles -->
@Styles.Render("~/Content/css")

<style>
    /* Global Styles */
    body {
/*        background: linear-gradient(135deg, #2c3e50, #34495e);*/
        background: white;
        color: #ecf0f1;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    
    /* Content Styles */
    .content {
        margin:0px;
        padding: 40px;
        
    }

    .header {
        text-align: center;
        margin-bottom: 40px;
        display: flex;
        flex-direction: column;
        background: linear-gradient(90deg, #d5a6e1, #a2dff7);
    }

        .header h1 {
            font-size: 3rem;
            font-weight: bold;
        }

    .lead {
        font-size: 1.4rem;
        font-weight:bold;
        color: #6e4e85;
    }

    /* Create Ticket and View Tickets Section */
    .ticket-section {
        display: flex;
/*        flex-direction:column;*/
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 40px;
    }

    .ticket-box {
        background: linear-gradient(90deg, #4facfe, #007c91, #00f2fe);
        padding: 20px;
        height: 30vh;
        width: 48%;
        text-align: center;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
    }

        .ticket-box:hover {
            transform: translateY(-10px);
        }

        .ticket-box h2 {
            font-size: 1.8rem;
            color: white;
            margin-bottom: 15px;
        }

        .ticket-box p {
            font-size: 1.1rem;
            color: white;
            margin-bottom: 15px;
        }

        .ticket-box a {
            background-color: #1abc9c;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1.1rem;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s;
        }

            .ticket-box a:hover {
                background-color: #16a085;
            }

   
    /* Floating Action Button */
    .fab {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #1abc9c;
        color: white;
        border: none;
        padding: 20px;
        border-radius: 50%;
        font-size: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
    }

        .fab:hover {
            background-color: #16a085;
            transform: scale(1.1);
        }
</style>
