    <!-- Main Content -->
    <div class="content">
        <header class="header">
            <h1>Welcome to the Ticketing System</h1>
            <p class="lead">Easily manage and track your support tickets.</p>
        </header>

        <!-- Create Ticket and View Tickets Section -->
        <section class="ticket-section">
            <div class="ticket-box">
                <h2>Create a New Ticket</h2>
                <p>Submit a new issue or request you're facing.</p>
                <a href="https://localhost:44363/Ticket/AddTicket" class="btn-create">Create New Ticket</a>
            </div>

            <div class="ticket-box">
                <h2>View My Tickets</h2>
                <p>Check the status of your existing tickets.</p>
                <a href="https://localhost:44363/Ticket/Index" class="btn-view">View My Tickets</a>
            </div>
        </section>

        
        <!-- Floating Action Button (For creating new ticket) -->
        <button class="fab">
            <i class="fa fa-plus"></i>
        </button>
    </div>
