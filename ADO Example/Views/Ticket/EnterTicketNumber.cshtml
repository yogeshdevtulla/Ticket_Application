@{
    ViewBag.Title = "Enter Ticket Number";
}

<h2 class="text-center mb-4">Enter Ticket Number</h2>

<!-- Ticket Number Form -->
<div class="container">
    <form id="ticketNumberForm" method="get" action="@Url.Action("UpdateTicket", "Ticket")">
        <div class="form-group">
            <label for="ticketNumber" class="form-label">Ticket Number:</label>
            <input type="text" id="ticketNumber" name="ticketNo" class="form-control form-control-lg" placeholder="Enter Ticket Number" required />
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg px-4 py-2">Submit</button>
        </div>
    </form>
</div>

<!-- External JS for Additional Interactions -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/CustomJS/ticket.js"></script>

