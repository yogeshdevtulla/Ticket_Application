<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Yogesh Devtulla Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/custom.css" rel="stylesheet" /> <!-- Add a custom CSS file -->
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar Navigation -->
        <nav class="navbar navbar-dark bg-dark flex-column vh-100" id="sidebar">
            <div class="text-center py-3">
                @Html.ActionLink("Yogesh Devtulla", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
            </div>
            <ul class="navbar-nav flex-column w-100">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link text-white" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link text-white" })</li>
                <li class="nav-item">@Html.ActionLink("Products", "Index", "Product", new { area = "" }, new { @class = "nav-link text-white" })</li>
                <li class="nav-item">@Html.ActionLink("Department", "Index", "Department", new { area = "" }, new { @class = "nav-link text-white" })</li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <!-- Header -->
            <header class="bg-light p-3 border-bottom d-flex align-items-center justify-content-between">
                <h1 class="m-0">Yogesh Devtulla</h1>
                <img src="~/Image/yogesh.gif" alt="Profile Icon" class="rounded-circle" width="40" height="40" />
            </header>

            <!-- Body Content -->
            <div class="container body-content mt-3">
                @RenderBody()
                <hr />
                <footer class="footer text-muted text-center">
                    <p>&copy; @DateTime.Now.Year - Application by Yogesh Devtulla </p>
                </footer>
            </div>
        </div>
    </div>

    <script src="~/Scripts/CustomJS/AutoHideAlert.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
